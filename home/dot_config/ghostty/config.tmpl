theme=Iceberg Light

font-feature = "-calt"
font-feature = "-dlig"
font-feature = "-liga"

cursor-style=block
cursor-style-blink=false
mouse-hide-while-typing

{{ if eq .chezmoi.os "linux" }}
font-size=10.3
keybind = performable:ctrl+c=copy_to_clipboard
keybind = ctrl+v=paste_from_clipboard
cursor-color = "#8060FF"
{{ else if eq .chezmoi.os "darwin"}}
font-size=12.5
cursor-color = "#8060FF"
{{ end }}

